{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true, // https://www.typescriptlang.org/tsconfig#skipLibCheck
    "typeRoots": ["node_modules/@types", "src/types"],
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "scripts",
    "jest.config.js",
    "coverage",
    "tests",
    "examples",
    "packages"
  ]
}
