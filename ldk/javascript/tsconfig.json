{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "scripts",
    "jest.config.js",
    "coverage",
    "tests",
    "examples"
  ]
}
